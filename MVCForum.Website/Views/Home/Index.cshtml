@{
    Layout = "~/Views/Shared/_LayoutRightSideBar.cshtml";
    ViewBag.Title = Html.Settings().PageTitle ?? Html.Settings().ForumName;
    ViewBag.MetaDesc = Html.Settings().MetaDesc;
}


@section side
{
    @Html.Partial("_CommonSideNav")
}

@* ### Remove ME - Not needed, just for our forum ### *@
@Html.Partial("_DocumentationBlock")
@* ### Remove ME - Not needed, just for our forum ### *@

@* Check forum.config to change this *@

@{
    switch (ForumConfiguration.Instance.ForumIndexView)
    {
        case "Categories":
            @Html.Action("ListMainCategories", "Category")
            break;
        case "Sections":
            @Html.Action("ListSections", "Category")
            break;
        case "Topics":
            @Html.Action("LatestTopics", "Topic")
            break;
    }
}
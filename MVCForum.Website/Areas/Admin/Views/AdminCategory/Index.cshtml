@{
    ViewBag.Title = "Manage Categories";
}

@section AdminHeader
{
    <link href="@Url.Content("~/Content/jstree/themes/proton/style.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Content/jstree/jstree.min.js")"></script>
    <script>
        $(function () {
            $('#container').jstree({
                'core': {
                    'themes': {
                        'name': 'proton',
                        'responsive': true
                    }
                }
            }).bind("select_node.jstree", function (e, data) {
                var href = data.node.a_attr.href;
                document.location.href = href;
            });
        });
    </script>

}


@model MvcForum.Web.ViewModels.Admin.LowestPointPostsViewModels


<div class="panel">
    <div class="panel-heading">
        <h5>Lowest Point Posts</h5>
    </div>
    @if (Model.Posts.Any())
    {
        <ul class="list-group">
            @foreach (var post in Model.Posts)
            {
                <li class="list-group-item">
                    <span class="badge">@post.VoteCount</span>
                    <a href="@post.Topic.NiceUrl">@post.Topic.Name</a> By <a href="@post.User.NiceUrl">@post.User.UserName</a>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="panel-content">
            Nothing to show
        </div>
    }

</div>

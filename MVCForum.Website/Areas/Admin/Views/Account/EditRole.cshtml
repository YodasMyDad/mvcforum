@model MvcForum.Web.ViewModels.Admin.RoleViewModel

@{
    ViewBag.Title = "Edit Role: " + Model.RoleName;
}

<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        @using (Html.BeginForm("EditRole", "Account", FormMethod.Post))
        {
            @Html.ValidationSummary(false)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.RoleName)
                @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoleName)
            </div>

            <div class="submit-holder">
                <input type="submit" class="btn-mvc-green" value="Save" />
            </div>
        }
    </div>
</div>



@model MVCForum.Website.Areas.Admin.ViewModels.RoleViewModel

@{
    ViewBag.Title = "Edit Role: " + Model.RoleName;    
}

@using (Html.BeginForm("EditRole", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <legend>Edit Role</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.RoleName)
            @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RoleName)
        </div>

        <div class="submit-holder">
            <input type="submit" class="btn-mvc btn-mvc-green" value="Save" />
        </div>

    </fieldset>
}

@model MvcForum.Web.ViewModels.Admin.AllResourceValuesViewModel
           
@{
    ViewBag.Title = "List All Values";
}

@Html.Partial("_LanguageOptions")

<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th style="width: 65px;">
                        Edit
                    </th>
                    <th>
                        Language
                    </th>
                    <th>
                        Value
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var resource in Model.ResourceValues.Keys)
                {
                    var resourceValue = Model.ResourceValues[resource];
                    <tr>
                        <td>
                            <a href="@Url.Action("EditAll", "AdminLanguage", new { resourceId = resource.Id })" class="btn-mvc">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => resource.Name)</strong>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => resourceValue.ResourceValue)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<h2>
    All resource values for @Model.ResourceKey.Name
</h2>



